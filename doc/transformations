# Monomino
#---------------------------------------

#-------------------
# Monomino
#-------------------

OrientationCount:       1
Rotateable:             no
Reflectable:            no
RaflectableOptionally:  no
TransformationType:     OneOrientation

Orientations:

NORMAL_0

4.....
3.....
2.....
1.....
0A....
 01234

A = (0, 0)

#---------------------------------------
# Domino
#---------------------------------------

#-------------------
# Domino
#-------------------

OrientationCount:       2
Rotateable:             yes, 2 times
Reflectable:            no
RaflectableOptionally:  no
TransformationType:     TwoOrientations

Orientations:

NORMAL_0        NORMAL_90

4.....          4.....
3.....          3.....
2.....          2.....
1B....          1.....
0A....          0AB...
 01234           01234

A = (0, 0)      A = (0, 0)
B = (0, 1)      B = (1, 0)

#---------------------------------------
# Trominos
#---------------------------------------

#-------------------
# Tromino I
#-------------------

OrientationCount:       2
Rotateable:             yes, 2 times
Reflectable:            no
RaflectableOptionally:  no
TransformationType:     TwoOrientations

Orientations:

NORMAL_0        NORMAL_90

4.....          4.....
3.....          3.....
2C....          2.....
1B....          1.....
0A....          0ABC..
 01234           01234

A = (0, 0)      A = (0, 0)
B = (0, 1)      B = (1, 0)
C = (0, 2)      C = (2, 0)

#-------------------
# Tromino V
#-------------------

OrientationCount:       4
Rotateable:             yes, 4 times
Reflectable:            yes
RaflectableOptionally:  yes
TransformationType:     FourOrientationsVW

Orientations:

NORMAL_0        NORMAL_90       NORMAL_180      NORMAL_270
REFLECTED_270   REFLECTED_180   REFLECTED_90    REFLECTED_0

4.....          4.....          4.....          4.....
3.....          3.....          3.....          3.....
2.....          2.....          2.....          2.....
1C....          1AC...          1BA...          1.B...
0AB...          0B....          0.C...          0CA...
 01234           01234           01234           01234

A = (0, 0)      A = (0, 1)      A = (1, 1)      A = (1, 0)
B = (1, 0)      B = (0, 0)      B = (0, 1)      B = (1, 1)
C = (0, 1)      C = (1, 1)      C = (1, 0)      C = (0, 0)

